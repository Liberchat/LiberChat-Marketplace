# LiberChat Server Configuration

# Application
NODE_ENV=production
PORT=__PORT__
HOST=127.0.0.1

# Domain and Path
DOMAIN=__DOMAIN__
APP_TITLE=LiberChat
APP_URL=https://__DOMAIN____PATH__

# Database
DATABASE_URL=postgresql://__DB_USER__:__DB_PWD__@localhost:5432/__DB_NAME__

# Redis
REDIS_URI=redis://localhost:6379

# Security
JWT_SECRET=__JWT_SECRET__
JWT_REFRESH_SECRET=__JWT_REFRESH_SECRET__
CREDS_KEY=__CREDS_KEY__
CREDS_IV=__CREDS_IV__

# Session
SESSION_EXPIRY=1000 * 60 * 15
REFRESH_TOKEN_EXPIRY=1000 * 60 * 60 * 24 * 7

# File uploads
FILE_UPLOAD_PATH=__DATA_DIR__/uploads
MAX_FILE_SIZE=20971520

# Logging
LOG_LEVEL=info
DEBUG_LOGGING=false

# Language
DEFAULT_LANGUAGE=__LANGUAGE__

# Admin user
ADMIN_EMAIL=__ADMIN_EMAIL__
ADMIN_PASSWORD=__PASSWORD__

# Features
REGISTRATION_ENABLED=true
EMAIL_VERIFICATION_ENABLED=false
ALLOW_SOCIAL_LOGIN=false

# Rate limiting
LIMIT_CONCURRENT_MESSAGES=true
LIMIT_MESSAGE_IP=true
MESSAGE_IP_MAX=40
MESSAGE_IP_WINDOW=1
MESSAGE_USER_MAX=40
MESSAGE_USER_WINDOW=1

# OpenAI API (optional)
# OPENAI_API_KEY=your_openai_api_key_here
# OPENAI_MODELS=gpt-3.5-turbo,gpt-4

# Anthropic API (optional)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google API (optional)
# GOOGLE_KEY=your_google_api_key_here

# Azure OpenAI (optional)
# AZURE_API_KEY=your_azure_api_key_here
# AZURE_OPENAI_API_INSTANCE_NAME=your_instance_name
# AZURE_OPENAI_API_DEPLOYMENT_NAME=your_deployment_name
# AZURE_OPENAI_API_VERSION=2023-05-15