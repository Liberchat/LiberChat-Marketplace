{
    "packaging_format": 2,
    "id": "liberchatserver",
    "name": "LiberChat Server",
    "description": {
        "en": "Self-hosted ChatGPT alternative with modern web interface",
        "fr": "Alternative auto-hébergée à ChatGPT avec interface web moderne"
    },
    "version": "1.0.0~ynh1",
    "url": "https://github.com/Liberchat/liberchat",
    "upstream": {
        "license": "MIT",
        "website": "https://liberchat.ai",
        "demo": "https://demo.liberchat.ai",
        "admindoc": "https://docs.liberchat.ai/install/configuration",
        "userdoc": "https://docs.liberchat.ai",
        "code": "https://github.com/Liberchat/liberchat"
    },
    "license": "MIT",
    "maintainer": {
        "name": "LiberChat Community",
        "email": "maintainer@liberchat.ai"
    },
    "requirements": {
        "yunohost": ">= 11.2.0"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "default": "/"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": false
            },
            {
                "name": "language",
                "type": "select",
                "choices": ["fr", "en", "es", "de"],
                "default": "en"
            },
            {
                "name": "password",
                "type": "password",
                "help": {
                    "en": "Use the help field to add an information for the admin about this question.",
                    "fr": "Utilisez le champ aide pour ajouter une information à l'intention de l'administrateur à propos de cette question."
                }
            }
        ]
    },
    "resources": {
        "sources": {
            "main": {
                "url": "https://github.com/Liberchat/liberchat/archive/refs/tags/v1.0.0.tar.gz",
                "sha256": "0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef"
            }
        },
        "system_user": {},
        "install_dir": {},
        "data_dir": {},
        "permissions": {
            "main": {
                "url": "/"
            },
            "api": {
                "url": "/api",
                "allowed": "visitors",
                "auth_header": false
            }
        },
        "ports": {},
        "apt": {
            "packages": [
                "postgresql",
                "redis-server",
                "build-essential",
                "python3-dev"
            ]
        },
        "database": {
            "type": "postgresql"
        }
    }
}